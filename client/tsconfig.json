{
    "compilerOptions": {
    "target": "esnext",
    "module": "es2022",
    "strictNullChecks": true,
    "noImplicitAny": true,  
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vite/client", "vite-plugin-svgr/client", "@testing-library/jest-dom", "vitest/globals"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
    },
    "include": ["src", "tests", "setupTests.ts"],
    "exclude": [ // Exclude test files from compilation
      "node_modules",   
      "**/*.spec.tsx" 
    ]
  }

  