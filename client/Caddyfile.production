buzzcentral.app:443 {
  tls /keys/tls_cert.pem /keys/tls_key.pem 
  root * /srv
  route {
    handle /api* {
      reverse_proxy app-buzzcentral-api-prod-1:4000
    }
     handle /socket.io/* {
      reverse_proxy app-buzzcentral-api-prod-1:4000
    } 
    @notApi {
      file {
        try_files {path} /index.html
      }
    }
    handle @notApi {
      file_server
    }
  }
}
