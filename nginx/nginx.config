# NGINX configuration for MERN app

# Define NGINX as the HTTP server
server {
    # Listen on port 80 for incoming requests
    listen 80;

    # Define the server name (adjust to your domain name)
    server_name example.com;

    # Location for serving the React static files
    location / {
        root /usr/share/nginx/html;
        index index.html index.htm;
        try_files $uri /index.html;
    }

    # Proxy requests to the Node.js server
    location /api {
        proxy_pass http://bullhorn-api-prod:${API_PORT};  # Assuming Node.js server is named 'node-app' and running on port ${API_PORT}
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # Additional NGINX configurations can be added as needed
}
